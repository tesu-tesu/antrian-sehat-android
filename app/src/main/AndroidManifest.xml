<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antriansehat.application">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Starter"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".view.RiwayatTiketActivity"/>
        <activity android:name=".view.ProfileActivity"/>
        <activity android:name=".view.PuskesmasListActivity" />
        <activity android:name=".view.ListBookActivity" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.ListHealthAgencyActivity"/>
        <activity android:name=".view.ListPolyclinicActivity"/>
        <activity android:name=".view.HomeActivity"/>
        <activity
            android:name=".view.SplashScreenActivity"
            android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>